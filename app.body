<div id="app">
  <v-app>
    <v-main>
      <v-switch v-model="show_only_active_restrictions" :label="`Show only active restrictions`"></v-switch>
      <div>
        <restriction
          v-for="item in restrictions"
          v-bind:restriction="item"
          
          v-if="!show_only_active_restrictions || item.active"

          v-on:action="loadRestrictions"

          ></restriction>
      </div>
    <v-main>
  </v-app>
</div>
